<UserControl x:Class="DataModifier.AddDeleteButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DataModifier"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             x:Name="ControlBase">
    <StackPanel Orientation="{Binding ElementName=ControlBase, Path=Orientation}" Grid.Row="1">
        <Button Width="30" Height="30" Content="+" Grid.Column="1" Grid.Row="0" FontSize="20" x:Name="Add" Click="Add_Click"></Button>
        <Button Width="30" Height="30" Content="-" Grid.Row="1" Grid.Column="1" FontSize="20" x:Name="Delete" Click="Delete_Click"></Button>
    </StackPanel>
</UserControl>
